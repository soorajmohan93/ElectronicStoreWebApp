@model ElectronicStoreModels.Models.Cart

@{
    ViewData["Title"] = "Edit Cart Item";
}

<h1>Edit Cart Item</h1>

<h4>@Html.DisplayFor(model => model.Products.ProductName) for @Html.DisplayFor(model => model.Customers.CustomerName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CartId" />
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select asp-for="Product" class="form-control" asp-items="ViewBag.Product"></select>
                <span asp-validation-for="Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <select asp-for="Customer" class="form-control" asp-items="ViewBag.Customer"></select>
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CartQuantity" class="control-label"></label>
                <input asp-for="CartQuantity" class="form-control" />
                <span asp-validation-for="CartQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
